<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/drawable_pink_gradient"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="contentDescription"

                />

            <TextView
                android:id="@+id/love_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@+id/close_btn"
                android:gravity="center|start"
                android:text="@string/love_this_app"

                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/rev1_img"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emoji_crying"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/rev2_img"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emoji_angry"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/rev3_img"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emoji_thinking"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/rev4_img"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emoji_happy"
                tools:ignore="contentDescription"

                />

            <ImageView
                android:id="@+id/rev5_img"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emoji_in_love"
                tools:ignore="contentDescription"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/avatar_girl_1"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/avatar_txt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatar_img"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/ui"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/avatar_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/avatar_img"
                android:background="@drawable/bubble_coming"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/first_msg"
                android:textAllCaps="false"
                android:textColor="@color/primaryText"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/cta_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/drawable_amber_gradient"
            android:text="@string/rate"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>